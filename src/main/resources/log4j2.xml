<?xml version='1.0' encoding='UTF-8'?>
<!-- Configuration of logging. (based on example project from lecture) -->
<!-- Author: Benedikt Stemmildt -->
<configuration status='INFO'>
  <appenders>
    <console name='console' target='SYSTEM_OUT'>
      <patternLayout pattern='%d{ISO8601} %-5p logger="%c" message="%m" thread="%t" %n'/>
    </console>
  </appenders>
  <loggers>
    <root level='INFO'>
      <appenderRef ref='console'/>
    </root>
  </loggers>
</configuration>
