<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
  "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
  <constant name="struts.action.excludePattern" value="/api/.*, /static/.*" />
  <constant name="struts.action.extension" value="" />
  <constant name="struts.ognl.allowStaticMethodAccess" value="true" />
  <constant name="struts.devMode" value="true"></constant>

  <!-- catch 404 errors -->
  <package name="serveAll" namespace="" extends="struts-default">
    <result-types>
      <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
    </result-types>
    <action name="*">
      <result type="tiles">notFoundError</result>
    </action>
  </package>

  <package name="default" namespace="/" extends="tiles-default">
    <result-types>
      <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
    </result-types>

    <interceptors>
      <interceptor name="login" class="de.nordakademie.iaa_multiple_choice.web.interceptor.LoginInterceptor" />
      <interceptor name="lecturer" class="de.nordakademie.iaa_multiple_choice.web.interceptor.LecturerInterceptor" />
      <interceptor name="student" class="de.nordakademie.iaa_multiple_choice.web.interceptor.StudentInterceptor" />
      <interceptor-stack name="iaa-multiple-choice">
        <interceptor-ref name="login" />
        <interceptor-ref name="lecturer" />
        <interceptor-ref name="student" />
        <interceptor-ref name="defaultStack" />
      </interceptor-stack>
    </interceptors>

    <default-interceptor-ref name="iaa-multiple-choice" />
    <global-results>
      <result name="loginRedirect" type="tiles">login</result>
      <!-- <result name="genericError" type="tiles">genericError</result> -->
      <result name="forbidden" type="tiles">forbiddenError</result>
      <result name="examNotFound" type="tiles">examNotFoundError</result>
      <result name="examNotEditable" type="tiles">examNotEditable</result>
    </global-results>

    <global-exception-mappings>
      <!-- <exception-mapping exception="java.lang.Exception" result="genericError" /> -->
      <exception-mapping exception="de.nordakademie.iaa_multiple_choice.domain.exceptions.ExamNotFoundException"
        result="examNotFound" />
      <exception-mapping exception="de.nordakademie.iaa_multiple_choice.domain.exceptions.ExamNotEditableException"
        result="examNotEditable" />
    </global-exception-mappings>

    <action name="" class="de.nordakademie.iaa_multiple_choice.web.HomeAction">
      <result name="welcome" type="tiles">home</result>
      <result name="lecturer" type="redirectAction">lecturer</result>
      <result name="student" type="redirectAction">student</result>
    </action>

    <action name="home" class="de.nordakademie.iaa_multiple_choice.web.HomeAction">
      <result name="welcome" type="tiles">home</result>
      <result name="lecturer" type="redirectAction">lecturer</result>
      <result name="student" type="redirectAction">student</result>
    </action>

    <action name="lecturer" class="de.nordakademie.iaa_multiple_choice.web.LecturerAction" method="execute">
      <result type="tiles">lecturer</result>
    </action>

    <action name="student" class="de.nordakademie.iaa_multiple_choice.web.StudentAction">
      <interceptor-ref name="store">
        <param name="operationMode">RETRIEVE</param>
      </interceptor-ref>
      <interceptor-ref name="iaa-multiple-choice" />
      <result type="tiles">student</result>
    </action>

    <action name="enroll" class="de.nordakademie.iaa_multiple_choice.web.EnrollAction" method="enrollStudent">
      <interceptor-ref name="store">
        <param name="operationMode">STORE</param>
      </interceptor-ref>
      <interceptor-ref name="iaa-multiple-choice" />
      <result type="redirectAction">
        <param name="actionName">showExam</param>
        <param name="examId">${examId}</param>
      </result>
      <result name="input" type="redirectAction">
        <param name="actionName">enrollInput</param>
        <param name="examId">${examId}</param>
      </result>
    </action>

    <action name="enrollInput" class="de.nordakademie.iaa_multiple_choice.web.EnrollAction" method="input">
      <interceptor-ref name="store">
        <param name="operationMode">RETRIEVE</param>
      </interceptor-ref>
      <interceptor-ref name="iaa-multiple-choice" />
      <result name="input" type="tiles">student</result>
    </action>

    <action name="createExam" class="de.nordakademie.iaa_multiple_choice.web.ExamAction">
      <result type="tiles">exam/create</result>
    </action>

    <action name="editExam" class="de.nordakademie.iaa_multiple_choice.web.ExamAction" method="editExam">
      <result name="input" type="tiles">examNotFoundError</result>
      <result type="tiles">exam/edit</result>
    </action>

    <action name="saveExam" class="de.nordakademie.iaa_multiple_choice.web.ExamAction" method="saveExam">
      <result name="created" type="redirectAction">
        <param name="actionName">createQuestion</param>
        <param name="examId">${exam.id}</param>
      </result>
      <result name="updated" type="redirectAction">lecturer</result>
      <result name="input" type="tiles">exam/create</result>
    </action>

    <action name="createQuestion" class="de.nordakademie.iaa_multiple_choice.web.QuestionAction" method = "createQuestion">
      <interceptor-ref name="store">
        <param name="operationMode">RETRIEVE</param>
      </interceptor-ref>
      <interceptor-ref name="iaa-multiple-choice" />
      <result name="success" type="tiles">exam/create/question</result>
      <result name="input" type="tiles">exam/create/question</result>
    </action>

    <action name="saveQuestion" class="de.nordakademie.iaa_multiple_choice.web.QuestionAction" method="saveQuestion">
      <interceptor-ref name="store">
        <param name="operationMode">STORE</param>
      </interceptor-ref>
      <interceptor-ref name="iaa-multiple-choice" />
      <result name="success" type="redirectAction">
        <param name="examId">${examId}</param>
        <param name="actionName">createQuestion</param>
      </result>
      <result name="input" type="redirectAction">
        <param name="examId">${examId}</param>
        <param name="actionName">createQuestion</param>
      </result>
    </action>

    <action name="showExam">
      <result type="tiles">exam/show</result>
    </action>

    <action name="show">
      <result type="tiles">exam/show</result>
    </action>

    <action name="mapping" class="de.nordakademie.iaa_multiple_choice.web.ExamMappingAction">
      <interceptor-ref name="store">
        <param name="operationMode">RETRIEVE</param>
      </interceptor-ref>
      <interceptor-ref name="iaa-multiple-choice" />
      <result name="success" type="tiles">lecturer/mapping</result>
      <result name="input" type="tiles">lecturer/mapping</result>
    </action>
    

    <action name="mappingInput" class="de.nordakademie.iaa_multiple_choice.web.ExamMappingAction" method="input">
      <interceptor-ref name="store">
        <param name="operationMode">RETRIEVE</param>
      </interceptor-ref>
      <interceptor-ref name="iaa-multiple-choice" />
      <result name="input" type="tiles">lecturer/mapping</result>
    </action>

    <action name="examMappingAction" class="de.nordakademie.iaa_multiple_choice.web.ExamMappingAction" method="mapStudents">
      <interceptor-ref name="store">
        <param name="operationMode">STORE</param>
      </interceptor-ref>
      <interceptor-ref name="iaa-multiple-choice" />
      <result type="redirectAction">
        <param name="actionName">mapping</param>
        <param name="examId">${examId}</param>
      </result>
      <result name="input" type="redirectAction">
        <param name="actionName">mappingInput</param>
        <param name="examId">${examId}</param>
      </result>
    </action>

    <!-- FOR TESTING / REMOVE LATER -->
    <action name="question">
      <result type="tiles">exam/create/question</result>
    </action>

    <action name="create">
      <result type="tiles">exam/create</result>
    </action>

    <action name="registration">
      <result name="input" type="tiles">registration</result>
      <result name="success" type="tiles">registration</result>
      <result name="successLecturer" type="tiles">lecturer</result>
      <result name="successStudent" type="tiles">student</result>
    </action>

    <action name="registerLecturer" class="de.nordakademie.iaa_multiple_choice.web.RegisterAction" method="registerLecturer">
      <result name="success" type="redirectAction">lecturer</result>
      <result name="input" type="tiles">registration</result>
      <result name="activationPending" type="redirectAction">activationPending</result>
    </action>

    <action name="registerStudent" class="de.nordakademie.iaa_multiple_choice.web.RegisterAction" method="registerStudent">
      <result name="success" type="redirectAction">student</result>
      <result name="input" type="tiles">registration</result>
      <result name="activationPending" type="redirectAction">activationPending</result>
    </action>

    <action name="activationPending" class="de.nordakademie.iaa_multiple_choice.web.ActivationPendingAction">
      <result name="redirectHome" type="redirectAction">home</result>
      <result name="success" type="tiles">activationPending</result>
    </action>

    <action name="activate" class="de.nordakademie.iaa_multiple_choice.web.ActivateAction">
      <result name="redirectHome" type="redirectAction">home</result>
      <result name="error" type="tiles">activationError</result>
      <result name="success" type="tiles">activationSuccess</result>
    </action>

    <action name="login" class="de.nordakademie.iaa_multiple_choice.web.LoginAction" method="display">
      <result name="success" type="tiles">login</result>
      <result name="redirectHome" type="redirectAction">>home</result>
    </action>

    <action name="logout" class="de.nordakademie.iaa_multiple_choice.web.LogoutAction" method="logout">
      <result name="success" type="redirectAction">home</result>
    </action>

    <action name="loginUser" class="de.nordakademie.iaa_multiple_choice.web.LoginAction" method="login">
      <result name="successLecturer" type="redirectAction">lecturer</result>
      <result name="successStudent" type="redirectAction">student</result>
      <result name="input" type="tiles">login</result>
      <result name="redirect" type="redirect">
        <param name="location">${prevUrl}</param>
      </result>
    </action>

    <action name="locale" class="de.nordakademie.iaa_multiple_choice.web.ChangeLanguageAction" method="changeLanguage">
      <result name="success" type="redirect">
        <param name="location">${prevUrl}</param>
      </result>
    </action>
  </package>
</struts>
